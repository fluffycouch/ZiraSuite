{
  "mcpServers": {
    "sqlite": {
      "command": "python",
      "args": ["-m", "uv", "tool", "run", "mcp-server-sqlite", "--db-path", "./project.db"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "list_tables",
        "describe_table",
        "read_query",
        "write_query",
        "create_table",
        "append_insight"
      ]
    }
  }
}